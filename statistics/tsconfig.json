{
    "compilerOptions": {
      "allowJs": true,
      "target": "ES2022",
      "module": "commonjs",
      "sourceMap": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
    },
    "include": [
        "src/**/*",
    ],
    "exclude": [
        "./test/",
        "./node_modules/",
        "./dist/"
    ],
}
